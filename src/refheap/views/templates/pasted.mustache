<div class="floater clearfix">
  <div id="pasteinfo">
    <span class="info">{{language}}</span>
    <span class="info">{{lines}}</span>
    <span class="info private">Private</span>
    <span lass="info">
      {{#forked}}
        Forked by
      {{/forked}}
      {{^forked}}
        Pasted by
      {{/forked}}
      {{{username}}}
      {{#forked}}
        from {{{from}}}
      {{/forked}}
      on {{date}}
    </span>
    <div id="edit">
      <a href="/paste/{{id}}/embed">embed</a>
      <a href="/paste/{{id}}/raw">raw</a>
      <a href="/paste/{{id}}/fullscreen">maximize</a>
      <a href="/paste/{{id}}/fork">fork</a>
      {{#owner}}
      <a href="/paste/{{id}}/edit">edit</a>
      <a href="/paste/{{id}}/delete" class="evil">delete</a>
      {{/owner}}
    </div>
  </div>
  <div id="paste" class="syntax">
    {{{contents}}}
  </div>
</div>
