<div id="main-container">
  <div id="paste-container">
    <form name="paste" action="{{url}}" method="post">
      <div id="paste-header">
        <select id="language" name="language">
          {{#languages}}
          <option value="{{language}}">{{language}}</option>
          {{/languages}}
          <option selected value="{{selected}}">{{selected}}</option>
        </select>
        <input name="private" type="checkbox" id="private"
{{#checked}}checked{{/checked}} />
        <label for="private">Private</label>
        <input value="{{button}}" type="submit" />
      </div>
      <textarea name="paste" id="paste">{{old}}</textarea>
    </form>
  </div>
</div>
